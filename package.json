{
  "name": "react-cross-client-router",
  "version": "1.0.6",
  "description": "A tool to control React apps spanning multiple tabs, windows or devices",
  "license": "MIT",
  "author": "jasper.stam@philips.com",
  "repository": "philips-software/react-cross-client-router",
  "keywords": [
    "react",
    "react-router",
    "cross-device",
    "cross-tab"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "lint": "eslint ./src",
    "precommit": "lint-staged",
    "prepare": "yarn run build",
    "predeploy": "cd example && yarn install && yarn run build"
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^16.6.0",
    "react-router-dom": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js}": [
      "prettier --single-quote --trailing-comma es5 --tab-width 2 --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@svgr/rollup": "^2.4.1",
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.1.4",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-react": "^7.10.0",
    "history": "^4.7.2",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^2.3.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "rollup": "^0.64.1",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-url": "^1.4.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "unload": "^2.1.0"
  }
}
